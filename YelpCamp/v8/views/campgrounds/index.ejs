<div class = "container">
  <header class = "jumbotron">
	<div class = "container">
      <h1>Welcom to YelpCamp!</h1>
	  <p>view our hand-picked campgrounds from all-over the world</p>
	  <p>
		<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new camground</a>
	  </p>
	</div>
  </header>


		  <h3>
			  Our Most Popular Site
		  </h3>
  <div class="row text-center" style="display:flex; flex-wrap: wrap;">

	  <% grounds.forEach(function(item) { %>
	  <div class = "col-md-3 col-sm-6">
		  <div class="thumbnail">
			   <img src= "<%= item.image %>">
			  <div class="caption">
				<h4> <%= item.name%> </h4>
			  </div>
			  <p>
				  
				  <a href = "/campgrounds/<%= item._id %>" class = "btn btn-primary"> More Info</a>
							  			<!-- mongo ID -->
			  </p>
		  </div>
	  </div>
	  <% }) %>
   </div>
</div>


